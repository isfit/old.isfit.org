<html class="no-js" lang="no"> <!--<![endif]-->

<head>
  <title>ISFiT 2013</title>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= yield :meta %>
  <meta name="description" content="ISFiT 2013 is the worlds largest international student festival. Trade Your Ideas."/>
  <meta name="og:description" content="ISFiT 2013 is the worlds largest international student festival. Trade Your Ideas."/>
  <meta name="viewport" content="width=device-width">
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

  <meta content="hello world">
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
  <%= csrf_meta_tag %>

 <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-18016792-1']);
    _gaq.push(['_setDomainName', 'isfit.org']);
    _gaq.push(['_trackPageview']);
    _gaq.push(['_trackLoadTime']);

    (function() {
     var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
     ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
     var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
     })();
  </script>



  <!-- Typekit fonts. Yes, these are supposed to live in the head... -->
  <script type="text/javascript" src="http://use.typekit.com/piu2mrs.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <%=yield :head%>
</head>

<body>

  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/nb_NO/all.js#xfbml=1&appId=111446192243028";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>


  <div class="navbar navbar-fixed-top"> <!-- Start tabs -->
    <div class="navbar-inner">
      <div class="container">
        <%= link_to image_tag("logo.png"), root_path, class: "brand" %>
        <%= tabs %>

          <div id="fb-connect-topbar" class="pull-right">
            <% if session[:user].nil? %>
              <p><a href="https://www.facebook.com/dialog/oauth?client_id=111446192243028&redirect_uri=http://www.isfit.org/oauth/callback&state=lolololololololol" target="_blank">Log in with Facebook</a></p>
            <% else %>
              <p class="facebook-user-name"><%= session[:user].name %> </p>
            <% end %>

            <div id="navbar-icons">
                <a href="http://twitter.com/isfit" target="_blank"><img src="http://i.imgur.com/Sk5wZ.png" alt=""></a>
                <a href="http://www.facebook.com/pages/ISFiT/11541693212" target="_blank"><img src="http://i.imgur.com/jfl7M.png" alt=""></a>
            </div>

          </div>

      </div>
    </div>
  </div><!-- End tabs -->

  <div class="container">
    <!-- TODO sett inn notice og warnings her. Se pÃ¥ internal -->
    <% if notice or alert %>
      <div class="alert alert-<%= notice ? "success":"error" %>">
        <a href="#" class="close" data-dismiss="alert">x</a>
        <strong><%= notice ? notice : raw(alert) %></strong>
      </div>
    <% end %>
    <div id="main-header">
        <%= yield :header %>
    </div>
    
    <div role="main" class="row"> <!-- Start main -->
      <div id="content" class="span8"><!-- Start header (span12) -->
        <%= yield %>
      </div><!-- Slutt header -->

      <aside id="sidebar" class="span4"><!-- Start hoyreramme -->

        <%= yield :sidebar %>

     <div class="promotional">
      <%if Language.to_s == "no"%>
          <a href="http://www.studentpeaceprize.org"><img src="http://i.imgur.com/0JiyF.png" alt="promotional"></a>
        <% else %>
          <a href="/pages/3"><img src="http://i.imgur.com/8Ub4m.png" alt="promotional"></a>
        <% end %>
    </div>

    <div class="promotional">
      <%if Language.to_s == "no"%>
          <a href="/pages/60"><img src="http://i.imgur.com/t0voi.png" alt="promotional"></a>
        <% else %>
          <a href="/pages/60"><img src="http://i.imgur.com/15ZNW.png" alt="promotional"></a>
        <% end %>
    </div>

      </aside><!-- Slutt hoyreramme -->


    </div><!-- End main -->




    <div class="row">
      <footer class="main-footer span12"><!-- Start footer -->
      <%=link_to(image_tag("isfitliten.png", :class=>"footer-logo"), root_path)%>
      <p>
      <%= t("footer.editor") %>: Synne Mari Pedersen, editor[at]isfit.org. <br />
      <%= t("footer.copyright") %>
      </p>
      </footer><!-- End footer -->
    </div>
  
  </div><!-- End container -->



  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="js/libs/jquery-1.7.1.min.js"><\/script>')</script>


  <%= javascript_include_tag 'application'%>
  <%= yield :script %>
</body>
</html>
