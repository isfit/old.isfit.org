<html class="no-js" lang="no"> <!--<![endif]-->

<head>
  <title>ISFiT 2013</title>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="ISFiT 2013 is the largest international student festival with a thematic focus in the world."/>
  <meta name="og:description" content="ISFiT 2013 is the largest international student festival with a thematic focus in the world."/>
  <meta name="viewport" content="width=device-width">
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

  <meta content="hello world">
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
  <%= csrf_meta_tag %>

  <!-- Typekit fonts. Yes, these are supposed to live in the head... -->
  <script type="text/javascript" src="http://use.typekit.com/piu2mrs.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <%=yield :head%>
</head>

<body>

  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/nb_NO/all.js#xfbml=1&appId=111446192243028";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>


  <div class="navbar navbar-fixed-top"> <!-- Start tabs -->
    <div class="navbar-inner">
      <div class="container">
        <%= link_to image_tag("logo.png"), root_path, class: "brand" %>
        <%= tabs %>

          <div id="navbar-search-wrapper" class="pull-right">
          </div>

      </div>
    </div>
  </div><!-- End tabs -->

  <div class="container">
    <!-- TODO sett inn notice og warnings her. Se på internal -->
    <% if notice or alert %>
      <div class="alert alert-<%= notice ? "success":"error" %>">
        <a href="#" class="close" data-dismiss="alert">x</a>
        <strong><%= notice ? notice : raw(alert) %></strong>
      </div>
    <% end %>
    <div id="main-header">
        <%= yield :header %>
    </div>
    
    <div role="main" class="row"> <!-- Start main -->
      <div id="content" class="span8"><!-- Start header (span12) -->
        <%= yield %>
      </div><!-- Slutt header -->

      <aside id="sidebar" class="span4"><!-- Start hoyreramme -->

        <%= yield :sidebar %>

        <div class="promotional">
          <img src="http://placehold.it/370x190&text=Promotional+Space" alt="promotional">
        </div>
        
        <div class="promotional">
          <img src="http://placehold.it/370x190&text=Promotional+Space" alt="promotional">
        </div>

      </aside><!-- Slutt hoyreramme -->


    </div><!-- End main -->




    <div class="row">
      <footer class="main-footer span12"><!-- Start footer -->
      <%=link_to(image_tag("isfitliten.png", :class=>"footer-logo"), root_path)%>
      <p>
      Editor in Chief: Synne Mari Pedersen, editor[at]isfit.org. <br />
      All written material and the ISFiT logo is copyrighted the ISFiT Foundation © 2013.
      </p>
      </footer><!-- End footer -->
    </div>
  
  </div><!-- End container -->



  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="js/libs/jquery-1.7.1.min.js"><\/script>')</script>


  <script type="text/javascript">
    var _gaq = _gaq || [];
    // _gaq.push(['_setAccount', 'UA-18016792-1']);
    // _gaq.push(['_setDomainName', 'isfit.org']);
    // _gaq.push(['_trackPageview']);
    // _gaq.push(['_trackLoadTime']);

    (function() {
     var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
     ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
     var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
     })();
  </script>

  <%= javascript_include_tag 'application'%>
  <%= javascript_include_tag 'gsc' %>
  <%= yield :script %>
</body>
</html>
