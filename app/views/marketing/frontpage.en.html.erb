<div class="row promo-row hide">
  <div class="span12">
    <div class="well">
      <h1>#isfit2013 - Instagram</h1>
      <div id="instamap" style="height: 500px;">
        <%= content_for :script do %>
          <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
          <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/gmaps.js/0.2.30/gmaps.min.js"></script>
          <script>
            $(document).ready(function() {
              var map = new GMaps({
                div: '#instamap',
                lat: 63.4226,
                lng: 10.3949,
                zoom: 13
              });

              $.getJSON('/instagram.json', function(data) {
                $.each(data, function(key, imagedata) {
                  var tagList = imagedata.tags;
                  console.log(tagList);
                  var tagStreng = "";
                  for(var tag in tagList){
                    tagStreng += "#" + tagList[tag] + " ";
                  }

                  console.log(tagStreng);

                  var image = new google.maps.MarkerImage(
                  imagedata.images.thumbnail.url,
                  new google.maps.Size(50,50),    // size of the image
                  new google.maps.Point(0,0), // origin, in this case top-left corner
                  new google.maps.Point(12.5, 12.5),    // anchor, i.e. the point half-way along the bottom of the image
                  new google.maps.Size(50,50) // scaledSize
                  );

                  map.addMarker({
                    lat: imagedata.location.latitude,
                    lng: imagedata.location.longitude,
                    title: imagedata.user.username,
                    icon: image,
                    click: function() {
                      var htmlStreng = "<p><a href='" + imagedata.link + "' target='_blank'><img src='" + imagedata.images.standard_resolution.url + "'></a></p>";
                      $("#instagram-image .modal-body").html(htmlStreng);
                      $('#instagram-image').modal('show');
                      $(".modal-footer").html("<p class='pull-left'>" + tagStreng + "</p><button class='btn' data-dismiss='modal' aria-hidden='true'>Close</button>");
                    }
                  });
                });
              });
            }); 
          </script>
        <% end %>
      </div>
      <div id="instagram-image" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-body">
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>
</div>

