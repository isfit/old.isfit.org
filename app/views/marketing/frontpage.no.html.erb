<%= render 'shared/streamer' %>


<div class ="row">
  <div class="span12" id="opptaks_banner">
    <%= link_to image_tag("skapisfit_banner_sokher_web.gif"), 'https://opptak.isfit.org' %>
  </div>
</div>
<div class="row">

</div>
<div class="row">
  <% @articles.each_with_index do |article, i| %>
    <% if i.eql? 0 %>
        <div id="news-carousel" class="carousel span6">
          <div class="item active">
            <a href="<%= article_path(article) %>">
              <%= image_tag article.frontend_article_image.url(:frontpage_large), height: "363px" %>
              <div class="carousel-caption">
                <h1><%= article.title %></h1>
                <p><%= article.sub_title %></p>
              </div>
            </a>
          </div>
        </div>
        <div class="span6">
          <iframe src="//player.vimeo.com/video/88811933" width="460" height="300" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>
      </div>
      <div class="row">
    <% else %>
        <div id="news-carousel lower-row" class="carousel slide span4">
          <div class="item active">
            <a href="<%= article_path(article) %>">
              <%= image_tag article.frontend_article_image.url(:frontpage_large), height: "363px", class: "lower-row-img" %>
              <div class="carousel-caption">
                <h4><%= truncate(article.title, length: 30, seperator: '...') %></h4>
            </div>
            </a>
          </div>
        </div>
    <% end %>
  <% end %>
</div>
</div>
