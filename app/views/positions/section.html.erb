<div class="well">
  <h1><%= @section.name %></h1>
  <div class="justified">
    <%= raw format(@section.description) %>
  </div>
  <h2><%= t("position.positions") %></h2>
  <ul>
    <% @section.groups.each do |g| %>
      <% g.positions.published.each do |p| %>
        <li><%= link_to p.title, position_path(p.id), class: "position" %></li>
      <% end %>
    <% end %>
  </ul>
</div>
